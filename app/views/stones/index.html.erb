<div class = "addstone">
  <button type="button" class="btn btn-outline-secondary">
  <%= link_to "Add your Stone", new_stone_path %>
  </button>
</div>

<div class = "container">
  <%= form_tag stones_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find the Stone you need"
    %>
    <%= submit_tag "Search", class: "btn btn-outline-secondary" %>
  <% end %>
</div>

<div class = "flex box" >

  <div class="cards">
    <% @stones.each do |stone|  %>
      <div class="card-product">
            <div class = "mini-carousel">
        <div id="carousel-<%= stone.id %>" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="https://www.france-mineraux.fr/wp-content/uploads/2016/05/galet-amethyste-02.jpg" class="d-block w-100" height="200" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://www.france-mineraux.fr/wp-content/uploads/2016/05/galet-amethyste-01.jpg" class="d-block w-100" height="200" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://www.france-mineraux.fr/wp-content/uploads/2016/05/galet-amethyste-03.jpg" class="d-block w-100" height="200" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel-<%= stone.id %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-<%= stone.id %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
    </div>
        <div class="card-product-infos">
          <h2><%= link_to stone.name, stone_path(stone) %></h2>
          <p> <%= stone.category %> <strong>Lille, France</strong></p>
          <p> <%= stone.age %> years old </p>
          <p> <%= stone.gender %></p>
          <img class = "avatar" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR2g7UrH5_EJOmTZv5-u3kvd2ERnwdzRJa4Hg&usqp=CAU">
          <h3><%= stone.price%>â‚¬</h3>
        </div>
      </div>
    <% end %>
  </div>

  <div id="map"
      style="width: 50%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


</div>



